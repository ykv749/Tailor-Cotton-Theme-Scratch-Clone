{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section--{{ section.id }} {
    color: {{ section.settings.text_color }}
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="
    center section-{{ section.id }}-padding
    {% if section.settings.page_width %} page-width {% endif %}
  "
>
  <div class="richtext__wrapper richtext--{{ section.id }}">
    {% if section.settings.heading_text != blank %}
      <div class="{{ section.settings.heading_size }} section--{{ section.id }} richtext__heading">
        {{ section.settings.heading_text }}
      </div>
    {% endif %}

    {% if section.settings.subheading_text != blank %}
      <div class="{{ section.settings.sub_heading_size }} section--{{ section.id }} richtext__subheading">
        {{ section.settings.subheading_text }}
      </div>
    {% endif %}

    <div class="center flex richtext__buttons">
      {% if section.settings.btn1_text != blank and section.settings.btn1_link != blank %}
        <div class="flex__item">
          <div style="margin: 1rem;">
            <a class="button button--primary" href="{{ section.settings.btn1_link }}">
              {{ section.settings.btn1_text }}
            </a>
          </div>
        </div>
      {% endif %}

      {% if section.settings.btn2_text != blank and section.settings.btn2_link != blank %}
        <div class="flex__item">
          <div style="margin: 1rem;">
            <a class="button button--primary" href="{{ section.settings.btn2_link }}">
              {{ section.settings.btn2_text }}
            </a>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% style %}
  .richtext--{{ section.id }} {
    padding: {{ section.settings.paddings | append: 'px' }};
    background: {{ section.settings.bgr }};
  }
  .richtext__heading {
      max-width: 100%;
      margin: auto;
      margin-bottom: 2rem;
    }
  .richtext__subheading {
    font-weight: 400;
  }
  .richtext__wrapper {
    padding-bottom: 5rem;
  }
  .richtext__buttons {
    justify-content: center;
  }
  @media only screen and (min-width: 990px) {
    .richtext__subheading {
      max-width: 65%;
      margin: 0 auto;
    }
    .richtext__heading {
      max-width: 60%;
      margin: auto;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Richtext",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "page_width",
      "label": "Page Width",
      "default": false
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "bgr",
      "label": "Background Color",
      "default": "#EFEDE5"
    },{
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }, {
      "type": "header",
      "content": "Text Settings"
    },{
      "type": "richtext",
      "id": "heading_text",
      "label": "Heading Text"
    },{
      "type": "richtext",
      "id": "subheading_text",
      "label": "subheading Text"
    },{
      "type": "text",
      "id": "btn1_text",
      "label": "Button Text1"
    },{
      "type": "url",
      "id": "btn1_link",
      "label": "Button Link1"
    },{
      "type": "text",
      "id": "btn2_text",
      "label": "Button Text2"
    },{
      "type": "url",
      "id": "btn2_link",
      "label": "Button Link2"
    },{
      "type": "range",
      "id": "paddings",
      "min": 1,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Padding",
      "default": 5
    },
    {
  "type": "radio",
  "id": "heading_size",
  "label": "Heading Size",
  "options": [
    {
      "value": "h1",
      "label": "H1"
    },
    {
      "value": "h2",
      "label": "H2"
    },
    {
      "value": "h3",
      "label": "H3"
    },
    {
      "value": "h4",
      "label": "H5"
    },
    {
      "value": "h6",
      "label": "H6"
    }
  ],
  "default": "h1"
},{
  "type": "radio",
  "id": "sub_heading_size",
  "label": "Sub Heading Size",
  "options": [
    {
      "value": "h1",
      "label": "H1"
    },
    {
      "value": "h2",
      "label": "H2"
    },
    {
      "value": "h3",
      "label": "H3"
    },
    {
      "value": "h4",
      "label": "H5"
    },
    {
      "value": "h6",
      "label": "H6"
    }
  ],
  "default": "h1"
}



  ],
  "presets": [
    {
      "name": "Richtext"
    }
  ]

}
{% endschema %}
