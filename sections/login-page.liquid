<div
  class="page-width login-page"
>
  <div class="h4 center common-padding">Login Page</div>
  {% if customer %}
    <div class="h6 center common-padding">You are already Logged In!!!</div>
    <div class="center common-padding">
      <a class="button button--primary" href="{{ routes.account_logout_url }}">Logout</a>
    </div>
  {% else %}
    {% form 'customer_login', return: routes.account_url %}
      {{ form.errors | default_errors }}
      <div class="container">
        <label for="email"><b>Email</b></label>
        <input type="email" name="customer[email]">

        <label for="password"><b>Password</b></label>
        <input type="password" name="customer[password]">

        <input type="submit" class="button button--primary common-padding" value="Sign in">
        <a class="button button--primary common-padding" href="/account/forgot_password">Forget Password</a>

        <div class="common-padding">
          <div class="container register">
            <p>
              <b>Don't have an account?</b>
              <a class="button button--primary" href="{{ routes.account_register_url }}">Register</a>.
            </p>
          </div>
        </div>
      </div>
    {% endform %}
  {% endif %}
</div>

<div class="page-width">
  {% form 'recover_customer_password' %}
    {{ form.errors | default_errors }}
    <div class="page-width recover hidden" id="recover">
      <div class="login_wrapper flex jusify-center align-center">
        <div class="login-container">
          <div class="login-inner">
            <div class="heading">
              <h1>Reset your password</h1>
            </div>
          </div>
          <div class="left submit">We will send you an email to reset your password.</div>
          <div class="email">
            <input type="email" name="email" placeholder="Email">
          </div>

          <div class="submit">
            <input type="submit" value="Submit" class="button button--primary">
          </div>
          <div class="account-recover-redirect left account-subheading">
            <a href="#">Cancel</a>
          </div>
        </div>
      </div>
    </div>
  {% endform %}
</div>

{% style %}
  @media only screen and (min-width: 990px) {
      .login-page {
        max-width: 60%;
      }
  }
  .container input[type=email], .container input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }
  .register {
    background-color: #f1f1f1;
    text-align: center;
  }
{% endstyle %}

